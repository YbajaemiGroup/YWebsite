        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YConsole.Views.Dialogs"
        mc:Ignorable="d"
        Title="ImagesDialog" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Width="256" Height="256" Margin="72,22,72,156" />
        <Button Grid.Column="0" Style="{StaticResource DefaultButtonStyle}" Content="Добавить" Margin="113,330,0,0" />
        <Button Grid.Column="0" Style="{StaticResource DefaultButtonStyle}" Content="Сохранить" Margin="113,375,0,0" />
        <ListView Grid.Column="1"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
