<UserControl x:Class="YConsole.Views.Dialogs.DeleteConfirmationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YConsole.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="420">
    <Grid Background="White">
        <TextBlock Margin="10,45,10,70" TextWrapping="Wrap" TextAlignment="Center" Text="Вы действительно хотите удалить выбранную запись из базы данных? Все связанные данные будут также удалены."></TextBlock>
        <Button Content="Да" Style="{StaticResource DefaultButtonStyle}" Height="30" Margin="10,124,0,0" Width="185" Click="OnConfirmButtonClick"></Button>
        <Button Content="Нет" Style="{StaticResource DefaultButtonStyle}" Height="30" Margin="225,124,0,0" Width="185" Click="OnDeclineButtonClick"></Button>
    </Grid>
</UserControl>
